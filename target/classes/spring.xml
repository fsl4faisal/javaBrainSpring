<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="javabrainSpring.Triangle">
		<property name="pointA" ref="zeroPoint"></property>
		<property name="pointB">
			<!-- Inner bean used if below bean is never used anywhere else in the 
				xml -->
			<!-- No id tag -->
			<bean class="javabrainSpring.Point">
				<property name="x" value="20" />
				<property name="y" value="0" />
			</bean>
		</property>
		<property name="pointC">
			<bean class="javabrainSpring.Point">
				<property name="x" value="0" />
				<property name="y" value="0" />
			</bean>
		</property>
	</bean>

	<!-- since its common, it is here -->
	<bean id="zeroPoint" class="javabrainSpring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<!-- name (is the id)  is the one which is already defined -->
	<alias name="triangle" alias="triangle-alias" />

</beans>

